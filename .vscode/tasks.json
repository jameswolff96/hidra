{
"version": "2.0.0",
"tasks": [
{
"label": "cargo build (workspace)",
"type": "shell",
"command": "cargo build --workspace",
"group": "build",
"problemMatcher": "$rustc"
},
{
"label": "cargo clippy (workspace)",
"type": "shell",
"command": "cargo clippy --workspace --all-targets -- -D warnings",
"problemMatcher": "$rustc"
},
{
"label": "Build-All.ps1",
"type": "shell",
"command": "pwsh scripts/Build-All.ps1"
}
]
}
